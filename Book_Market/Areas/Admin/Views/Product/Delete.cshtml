@model Product

<div class="card shadow border-0 mt-lg-5">
    <div class="card-header ml-0 py-1 bg-primary">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3 mt-4 form-control-lg">
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="ProductId" type="hidden" />
                    <input asp-for="Title" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Description" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="ISBN" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Author" disabled type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="ListPrice" disabled type="number" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price" disabled type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price50" disabled type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price100" disabled type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                </div>
                <div class="row pt-4">
                    <div class="col-6">
                        <input type="submit" class="btn btn-danger form-control" value="Delete" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Product" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

