@model Product
<div class="card shadow border-0 mt-lg-5">
    <div class="card-header ml-0 py-1 bg-primary">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Create Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
        <div class=" p-3 mt-4 form-control-lg ">
       
        @* <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div> *@
        <div class="form-floating py-2 col-12 ">
            <input asp-for="Title" type="text" class="form-control border-0 shadow" />
            <label asp-for="Title" class="ms-2"></label>
           
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>
        <div class="py-2 col-12 ">
            <label asp-for="Description" class="ms-2 text-muted"></label>
            <textarea asp-for="Description"  class="form-control border-0 shadow" ></textarea>
            
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="ISBN" type="text" class="form-control border-0 shadow" />
                    <label asp-for="ISBN" class="ms-2"></label>
                    <span asp-validation-for="ISBN" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Author" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Author" class="ms-2"></label>
                    <span asp-validation-for="Author" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="ListPrice" type="number" class="form-control border-0 shadow" />
                    <label asp-for="ListPrice" class="ms-2"></label>
                    <span asp-validation-for="ListPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price" type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price" class="ms-2"></label>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price50" type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price50" class="ms-2"></label>
                    <span asp-validation-for="Price50" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input asp-for="Price100" type="number" class="form-control border-0 shadow" />
                    <label asp-for="Price100" class="ms-2"></label>
                    <span asp-validation-for="Price100" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" type="number" class="form-select border-0 shadow">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <label asp-for="CategoryId" class="ms-2"></label>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12 ">
                    <input  type="file" name="fileUploaded" class="form-control border-0 shadow" />
                    <label asp-for="ImageUrl" class="ms-2"></label>
                </div>
        <div class="row pt-4">
            <div class="col-6">
            <input type="submit" class="btn btn-primary form-control"  />
            </div>
            <div class="col-6">
                <a asp-action="Index" asp-controller="Product" class="btn btn-secondary border form-control" >
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
</div>
</div>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons lists searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss markdown',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough |  addcomment showcomments | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent ',
            tinycomments_mode: 'embedded',
            tinycomments_author: 'Author name',
            mergetags_list: [
                { value: 'First.Name', title: 'First Name' },
                { value: 'Email', title: 'Email' },
            ],
            ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
        });
    </script>
    <partial Title="_ValidationScriptsPartial" />
}