@model List<Product>
@{
    ViewBag.Title = "Categories";
}

<div class="card shadow border-0 mt-lg-5">
    <div class="card-header ml-0 py-1 bg-primary">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-12 text-end">
                <a asp-action="Create" asp-controller="Product" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Create New Product
                </a>
            </div>
        </div>
        <table id="myTable" class="table table-hover table-striped" width="100%">
            <thead class="table-primary">
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>Author</th>
                    <th>Price</th>
                    <th>Category</th>

                    <th></th>
                </tr>
            </thead>
           
        </table>
    </div>
    </div>
</div>


@section Scripts{
    <script src="~/js/product.js"></script>
}
