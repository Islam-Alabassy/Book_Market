
@model Category
<div class="card shadow border-0 mt-lg-5">
    <div class="card-header ml-0 py-1 bg-primary">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row">
            <div class="p-3 mt-4 form-control-lg">
                @* <div asp-validation-summary="ModelOnly" class="text-bg-danger"></div> *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="CategoryId" type="hidden" />
                    <input asp-for="Name" type="text" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-4"></label>

                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="number" class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-4"></label>

                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
                <div class="row pt-4">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" />
                    </div>
                    <div class="col-6">
                        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


